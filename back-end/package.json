{
  "name": "Local_Community",
  "version": "0.1.0",
  "description": "Local Community issue reporting web app.",
  "main": "index.js",
  "engines": {
    "node": "12.x"
  },
  "scripts": {
    "start": "node index.js",
    "acceptance": "jest --coverage --detectOpenHandles",
    "jsdoc": "node_modules/.bin/jsdoc -c ../jsdoc.conf",
    "linter": "node_modules/.bin/eslint --ignore-path ../.gitignore .",
    "linterfix": "node_modules/.bin/eslint --ignore-path ../.gitignore --fix .",
    "test": "jest --coverage --detectOpenHandles",
    "unit": "node_modules/.bin/jest --coverage --runInBand tests/unit/",
    "watch": "node_modules/.bin/nodemon index.js"
  },
  "jest": {
    "projects": [
      "<rootDir>/jest-test.config.js"
    ]
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@koa/cors": "^2.2.3",
    "@mitch137/validation": "file:../validation",
    "bcrypt": "^3.0.6",
    "bcrypt-promise": "^2.0.0",
    "dotenv": "^8.2.0",
    "fs-extra": "^7.0.1",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.6.2",
    "koa-body": "^4.0.8",
    "koa-bodyparser": "^4.2.1",
    "koa-router": "^7.4.0",
    "mime-types": "^2.1.22",
    "nodemailer": "^6.3.1",
    "sqlite-async": "^1.0.11"
  },
  "devDependencies": {
    "eslint": "^5.15.2",
    "http-status-codes": "^1.3.2",
    "jest": "^24.1.0",
    "jsdoc": "^3.6.3",
    "jsdoc-route-plugin": "^0.1.0",
    "nodemon": "^1.19.3"
  }
}
